{% extends 'base.html.twig' %}

{% block title %}Просмотр продукта{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h1 class="card-title">Просмотр продукта</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="table-light" style="width: 30%">ID</th>
                                    <td>{{ product.id }}</td>
                                </tr>
                                <tr>
                                    <th class="table-light">Название</th>
                                    <td>{{ product.name }}</td>
                                </tr>
                                <tr>
                                    <th class="table-light">Цена</th>
                                    <td>{{ product.price|number_format(2, '.', ' ') }} ₽</td>
                                </tr>
                                <tr>
                                    <th class="table-light">Описание</th>
                                    <td>{{ product.description }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        {% if product.photo %}
                            <img src="{{ product.photo }}" alt="{{ product.name }}" class="img-fluid rounded">
                        {% else %}
                            <div class="alert alert-info">Изображение отсутствует</div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between">
                    <div>
                        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Назад к списку
                        </a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Редактировать
                        </a>
                    </div>
                    {{ include('product/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
