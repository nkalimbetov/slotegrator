<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить этот продукт?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i> Удалить</button>
</form>
